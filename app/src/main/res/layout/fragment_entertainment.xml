<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sub_tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_divider_color="#1AFFFFFF"
        tl:tl_divider_padding="0dp"
        tl:tl_divider_width="0dp"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="10dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="#666666"
        tl:tl_textsize="13sp"
        tl:tl_underline_color="#1AFFFFFF"
        tl:tl_underline_height="1dp" />

    <!--    <android.support.v4.view.ViewPager-->
    <!--        android:id="@+id/sub_vp_container"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        />-->

    <com.lucky.customviewlearn.view.nestedviewpager.ChildViewPager
        android:id="@+id/sub_vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>