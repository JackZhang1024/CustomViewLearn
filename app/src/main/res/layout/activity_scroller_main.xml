<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroller" />

    <Button
        android:id="@+id/btn_scroller_extend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ExtendScroller" />

    <Button
        android:id="@+id/btn_scroller_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AdvancedScroller" />

    <Button
        android:id="@+id/btn_drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可拖拽的View" />

    <Button
        android:id="@+id/btn_advanced_drag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="高级可拖拽的View" />

    <Button
        android:id="@+id/btn_drag_view_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DragViewHelper" />

</LinearLayout>